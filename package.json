{
  "name": "react-nesting-example",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "react-scripts": "^5.0.1"
  },
  "scripts": {
    "postinstall": "run-s install:*",
    "install:app1": "cd src/app1 && npm install",
    "install:app2": "cd src/app2 && npm install",
    "copy:app1": "cpx 'src/shared/**' 'src/app1/shared/'",
    "copy:app2": "cpx 'src/shared/**' 'src/app2/shared/'",
    "dev:app1": "cpx 'src/shared/**' 'src/app1/shared/' --watch --no-initial",
    "dev:app2": "cpx 'src/shared/**' 'src/app2/shared/' --watch --no-initial",
    "predev": "run-p copy:*",
    "dev": "run-p start dev:*",
    "start": "react-scripts start",
    "prebuild": "run-p copy:*",
    "build": "react-scripts build"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "cpx": "1.5.0",
    "npm-run-all": "4.1.5"
  }
}
